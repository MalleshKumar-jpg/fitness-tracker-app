<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="30.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fitnesstracker.controller.LoginController">
    <padding>
        <Insets top="50" right="100" bottom="50" left="100" />
    </padding>

    <Label text="Fitness Tracker" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="48.0" />
        </font>
    </Label>

    <!-- Login Section -->
    <VBox alignment="CENTER" prefWidth="500.0" spacing="20.0" style="-fx-background-color: white; -fx-padding: 40; -fx-border-color: #3498db; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-width: 2;">
        <Label text="Fitness Tracker Login" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="32.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20" />
            </VBox.margin>
        </Label>

        <TextField fx:id="loginNameField" promptText="Username" prefHeight="45.0" style="-fx-font-size: 14px; -fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5;">
            <VBox.margin>
                <Insets bottom="10" />
            </VBox.margin>
        </TextField>

        <PasswordField fx:id="loginPasswordField" promptText="Password" prefHeight="45.0" style="-fx-font-size: 14px; -fx-border-color: #bdc3c7; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5;">
            <VBox.margin>
                <Insets bottom="20" />
            </VBox.margin>
        </PasswordField>

        <VBox alignment="CENTER" spacing="15">
            <Button mnemonicParsing="false" onAction="#handleLogin" prefWidth="200.0" prefHeight="45.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="Login" />

            <Button mnemonicParsing="false" onAction="#handleShowRegister" prefWidth="200.0" prefHeight="45.0" style="-fx-background-color: #bdc3c7; -fx-text-fill: #2c3e50; -fx-font-size: 16px; -fx-background-radius: 5; -fx-cursor: hand;" text="Register" />
        </VBox>

        <Label fx:id="statusLabel" textFill="#e74c3c" wrapText="true" style="-fx-font-size: 13px;">
            <VBox.margin>
                <Insets top="10" />
            </VBox.margin>
        </Label>
    </VBox>
</VBox>