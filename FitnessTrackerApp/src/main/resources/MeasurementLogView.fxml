<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fitnesstracker.controller.MeasurementLogController"
      spacing="15" prefWidth="400" prefHeight="300" style="-fx-background-color: #f4f7fa; -fx-padding: 20;">

    <Label text="Log Body Measurement" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1a4f78;"/>

    <GridPane hgap="10" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="120" />
            <ColumnConstraints minWidth="220" hgrow="ALWAYS" />
        </columnConstraints>

        <!-- Date -->
        <Label text="Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <DatePicker fx:id="measurementDatePicker" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="220"/>

        <!-- Weight -->
        <Label text="Weight (kg):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="weightField" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="e.g., 70.5"/>

        <!-- Height -->
        <Label text="Height (cm):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="heightField" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="e.g., 175 (optional)"/>

    </GridPane>

    <!-- Status Label -->
    <Label fx:id="statusLabel" text="" style="-fx-text-fill: red; -fx-font-weight: bold;"/>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" prefWidth="100" style="-fx-background-color: #e0e0e0;"/>
        <Button text="Save" onAction="#handleSaveMeasurement" prefWidth="100" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>
</VBox>
