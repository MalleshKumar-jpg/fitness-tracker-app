<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            prefHeight="700.0" prefWidth="1000.0"
            fx:controller="com.fitnesstracker.controller.ReportController">

    <top>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="20" right="20" top="20"/>
            </padding>

            <Label text="Fitness Tracker Report" styleClass="title-label">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="exportButton" text="Export to File"
                        onAction="#handleExport" prefWidth="120"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label fx:id="statusLabel" text="Ready"
                       style="-fx-text-fill: gray;"/>
            </HBox>

            <Separator/>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10"/>
            </padding>

            <TextArea fx:id="reportTextArea"
                      editable="false"
                      wrapText="false"
                      prefRowCount="30"
                      prefColumnCount="120"
                      style="-fx-font-family: 'Courier New'; -fx-font-size: 12px;"/>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="20" left="20" right="20" top="10"/>
            </padding>

            <Button text="Close" onAction="#handleClose"
                    prefWidth="100"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        </HBox>
    </bottom>
</BorderPane>